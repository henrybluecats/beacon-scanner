<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
            android:key="native_scan_window"
            android:title="Scan Time"
            android:defaultValue="3000"
            android:selectAllOnFocus="true"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:maxLines="1"/>

    <EditTextPreference
            android:key="native_scan_interval"
            android:title="Scan Interval"
            android:defaultValue="700"
            android:selectAllOnFocus="true"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:maxLines="1"/>
    <EditTextPreference
            android:key="native_scan_mac"
            android:title="Bluetooth MAC Address of the Beacon, e.g.7D:AC:96:13:A6:39 "
            android:defaultValue="7D:AC:96:13:A6:39"
            android:selectAllOnFocus="true"
            android:inputType="textCapCharacters"
            android:singleLine="true"
            android:maxLines="1"/>
    <ListPreference
            android:key="scanmode_list"
            android:title="Choose BLE scan mode"
            android:defaultValue="2"
            android:entries="@array/pref_scan_mode_titles"
            android:entryValues="@array/pref_scan_mode_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>
</PreferenceScreen>
