<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView android:id="@+id/tv_address"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="address" />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gap Max:"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gap" android:id="@+id/tv_gap_max"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lost for:"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="time" android:id="@+id/tv_lost_time"/>
    </LinearLayout>

</LinearLayout>
